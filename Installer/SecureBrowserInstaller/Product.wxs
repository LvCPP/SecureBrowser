        </Shortcut>
        <RemoveFolder Id="RemoveMenuFolder" On="uninstall" />
        <RegistryValue Root="HKCU"
                       Key="Software\SoftServe\SecureBrowser"
                       Name="installed"
                       Type="integer"
                       Value="1"
                       KeyPath="yes" />
