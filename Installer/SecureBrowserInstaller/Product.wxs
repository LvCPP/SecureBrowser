      <Component Id="Startup.exe" Guid="e155beaa-ba87-4484-832d-f87373ab93db">
        <File Id="Startup.exe" 
              Name="Startup.exe" 
              Source="$(var.Startup.TargetDir)Startup.exe" />
        <Shortcut Id="MenuShortcut"
                 Name="Secure Browser"
                 Description="Start the Secure Browser"
                 Directory="StartMenuFolder"
                 Target="[#Startup.exe]">
